QScrollArea.Product {
    background: transparent;
}

QScrollArea {
    border: none;
    outline: none;
}

QFrame#search_frame {
    background: #fafafa;
    border: none;
    outline: none;
}

QLineEdit{
	max-width: 30px;
	min-width: 30px;
}

QLabel#num_label, QLabel#may_like_label{
    color: #1c1c1c;
    font-size: 16px;
}

QLabel#res_label, QLabel#time_label, QLabel#sales_label, QLabel#price_label, QLabel#region_label, QLabel#line_label{
    color: #777777;
    font-size: 12px;
}

QFrame.HorizontalLine {
    color: #e5e5e5;
}

